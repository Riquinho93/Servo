<Page
    x:Class="ServoWindows.View.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ServoWindows.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ServoLibrary.Model"
    mc:Ignorable="d">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SplitView Grid.Row="1">
            <SplitView.Content>
                <GridView ItemsSource="{x:Bind Users}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:User">
                            <StackPanel>
                                <Image Width="160" Source="/../Assets/img3.jpg" />
                                <TextBlock FontSize="40" Text="{x:Bind email}"/>
                                <TextBlock FontSize="14" Text="{x:Bind password}"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>
